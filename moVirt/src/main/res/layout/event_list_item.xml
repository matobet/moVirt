<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/default_item_horizontal_margin"
                android:paddingRight="@dimen/default_item_horizontal_margin"
                android:paddingTop="@dimen/default_item_vertical_margin_small"
                android:paddingBottom="@dimen/default_item_vertical_margin_small">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/inner_container">

        <ImageView
            android:id="@+id/event_severity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/statusIconHint"
            android:gravity="start"
            android:paddingStart="@dimen/default_item_horizontal_margin_small"
            android:paddingLeft="@dimen/default_item_horizontal_margin_small"
            android:paddingEnd="@dimen/default_item_horizontal_margin_small"
            android:paddingRight="@dimen/default_item_horizontal_margin_small"/>

        <TextView
            android:id="@+id/event_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_centerVertical="true"

            android:layout_toEndOf="@id/event_severity"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_toRightOf="@id/event_severity"/>

    </RelativeLayout>

    <TextView
        android:layout_below="@id/inner_container"
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:textIsSelectable="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>
